<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="18dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/itemNama"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:text="Nasi Rendang"
            android:textColor="#3E2723"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/itemImage"
            app:layout_constraintEnd_toStartOf="@id/layoutHargaQty"
            app:layout_constraintTop_toTopOf="@id/itemImage"
            />

        <TextView
            android:id="@+id/item_deskripsi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:text="Makanan Berat"
            android:textColor="#757575"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/itemImage"
            app:layout_constraintEnd_toStartOf="@+id/layoutHargaQty"
            app:layout_constraintTop_toBottomOf="@id/itemNama"
            app:layout_constraintBottom_toBottomOf="@id/itemImage"/>

        <LinearLayout
            android:id="@+id/layoutHargaQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/itemHarga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp 25.000"
                android:textColor="#FF4338"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAlignment="center"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnKurangiItem"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@drawable/bg_round"
                    android:backgroundTint="#FF8838"
                    android:padding="6dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/remove"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/jumlahItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btnTambahItem"
                    app:layout_constraintStart_toEndOf="@id/btnKurangiItem"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/btnTambahItem"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@drawable/bg_round"
                    android:backgroundTint="#FF8838"
                    android:padding="6dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/add"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/white" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/btnHapus"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_round"
            android:backgroundTint="#D32F2F"
            android:src="@drawable/delete"
            app:tint="@color/white"
            android:scaleType="centerInside"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutHargaQty" />

        <TextView
            android:id="@+id/lblPedas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Level Pedas:"
            android:textColor="#FF4338"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/itemImage"
            app:layout_constraintTop_toBottomOf="@id/item_deskripsi" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/gantiLevelPedas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/lblPedas"
            app:layout_constraintBottom_toBottomOf="@id/lblPedas"
            app:layout_constraintTop_toTopOf="@id/lblPedas">

            <ImageButton
                android:id="@+id/btnKurangiLevelPedas"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/bg_round"
                android:backgroundTint="#FF8838"
                android:src="@drawable/remove"
                app:tint="@color/white"
                android:padding="6dp"
                android:scaleType="centerInside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/levelPedas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginHorizontal="8dp"
                app:layout_constraintStart_toEndOf="@id/btnKurangiLevelPedas"
                app:layout_constraintEnd_toStartOf="@id/btnTambahLevelPedas"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageButton
                android:id="@+id/btnTambahLevelPedas"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/bg_round"
                android:backgroundTint="#FF8838"
                android:src="@drawable/add"
                app:tint="@color/white"
                android:padding="6dp"
                android:scaleType="centerInside"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <CheckBox
            android:id="@+id/cbDingin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dingin (Pakai Es)"
            android:textSize="12sp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="@id/itemImage"
            app:layout_constraintTop_toBottomOf="@id/item_deskripsi" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/groupMakanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="lblPedas,gantiLevelPedas"
            android:visibility="gone" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/groupMinuman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="cbDingin"
            android:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>